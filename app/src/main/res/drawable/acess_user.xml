<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="#FFA700"/>
            <stroke
                android:width="2.3dp"
                android:color="#FFA700" />
            <corners
                android:radius="26dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="#FFA700"/>
            <stroke
                android:width="2.3dp"
                android:color="#FFA700" />
            <corners
                android:radius="26dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="#FFA700"/>
            <stroke
                android:width="2.3dp"
                android:color="#FFA700" />
            <corners
                android:radius="26dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#FFA700"
                android:centerColor="#FFA700"
                android:endColor="#FFA700"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#FFA700" />
            <corners
                android:radius="26dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>